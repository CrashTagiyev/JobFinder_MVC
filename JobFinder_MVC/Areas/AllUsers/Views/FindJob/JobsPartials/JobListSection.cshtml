@model List<FindJobViewModel>


@{
	var filterOptionModel = ViewData["filterOptions"] as JobSearchFilterOptions;
}

<div class="job-listing-area pt-120 pb-120">
	<div class="container">
		<div class="row">
			<!-- Left content -->
			<partial name="JobListFilterPartial.cshtml" model="filterOptionModel"></partial>
			<!-- Right content -->
			<div class="col-xl-9 col-lg-9 col-md-8">
				<!-- Featured_job_start -->
				<section class="featured-job-area">
					<div class="container">
						<!-- Count of Job list Start -->
						<div class="row">
							<div class="col-lg-12">
								<div class="count-job mb-35">
									<span>@Model.Count Jobs found</span>
									<!-- Select job items start -->
									<div class="select-job-items">
										<span>Sort by</span>
										<select name="select">
											<option value="">None</option>
											<option value="">job list</option>
											<option value="">job list</option>
											<option value="">job list</option>
										</select>
									</div>
									<!--  Select job items End-->
								</div>
							</div>
						</div>
						<!-- Count of Job list End -->
						<!-- single-job-content -->
						@if (Model != null && Model.Count > 0)
							foreach (FindJobViewModel job in Model)
							{
								<div class="single-job-items mb-30" !>
									<div class="job-items">
										<div class="company-img">
											<a href="#"><img style="width:150px;height:100px;" src="@job.CompanyVM!.CompanyImageUrl" alt="not_found_img"></a>
										</div>
										<div class="job-tittle job-tittle2">
											<a asp-area="AllUsers" asp-controller="FindJob" asp-action="JobDetail" asp-route-id="@job.Id">
												<h4>@job.Title</h4>
											</a>
											<ul>
												<li style="overflow:hidden;width:130px;">@job.CompanyVM.CompanyName</li>
												<li><i class="fas fa-map-marker-alt"></i>@job.Region</li>
												<li>$@job.MinimumSalary - $@job.MaximumSalary</li>
											</ul>
										</div>
									</div>
									<div class="items-link items-link2 f-right">
										<a style="margin-bottom:0.74rem !important" href="job_details.html">@job.JobNature</a>
										<span >@await job.GetPostedTimeAgoString() </span>
									</div>
								</div>

							}
					</div>
				</section>
				<!-- Featured_job_end -->
			</div>
		</div>
	</div>
</div>