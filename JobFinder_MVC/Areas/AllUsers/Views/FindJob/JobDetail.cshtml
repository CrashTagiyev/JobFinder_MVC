@model JobDetailVM

<section>
	<!-- Hero Area Start-->
	<div class="slider-area ">
		<div class="single-slider section-overly slider-height2 d-flex align-items-center" data-background="/assets/img/hero/about.jpg">
			<div class="container">
				<div class="row">
					<div class="col-xl-12">
						<div class="hero-cap text-center">
							<h2>@Model.Category!.Name</h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Hero Area End -->
	<!-- job post company Start -->
	<div class="job-post-company pt-120 pb-120">
		<div class="container">
			<div class="row justify-content-between">
				<!-- Left Content -->
				<div class="col-xl-7 col-lg-8">
					<!-- job single -->
					<div class="single-job-items mb-50" style="display:flex !important;flex-direction:row !important;">
						<div class="job-items">
							<div class="company-img company-img-details">
								<a href="#"><img src="@Model.Company!.CompanyImageUrl" style="width:170px;height:120px;" alt=""></a>
							</div>
							<div class="job-tittle">
								<a href="#">
									<h5 style="overflow-wrap:break-word !important;">@Model.Title</h5>
								</a>
								<ul>
									<li>@Model.Company.CompanyName</li>
									<li><i class="fas fa-map-marker-alt"></i>@Model.Region</li>
									<li>$@Model.MinimumSalary - $@Model.MaximumSalary</li>
								</ul>
							</div>
						</div>
					</div>
					<!-- job single End -->

					<div style="padding-left:30px;" class="job-post-details">
						<div class="post-details1 mb-50">
							<!-- Small Section Tittle -->
							<div class="small-section-tittle">
								<h4>Job Description</h4>
							</div>
							<p>@Model.JobDescription</p>
						</div>

						<div class="post-details2  mb-50">
							<!-- Small Section Tittle -->
							<div class="small-section-tittle">
								<h4>Additional information</h4>
							</div>
							<ul>
								<li>Gender:@Model.Gender</li>
								<li>Education:@Model.Education</li>
								<li>Experience:@Model.Experience</li>
								<li>Category:@Model.Category!.Name</li>
							</ul>

						</div>
						<div class="post-details2  mb-50">
							<!-- Small Section Tittle -->
							<div class="small-section-tittle">
								<h4>Tags</h4>
							</div>
							<div  style="display:flex;flex-direction:row;flex-wrap:wrap;gap:14px;">
								@if (Model.Tags is not null && Model.Tags.Count > 0)
								{
									@foreach (var tag in Model.Tags)
									{
										<a href="#" style="color:blue !important;">#@tag.Name</a>
									}
								}
							</div>

						</div>
					</div>

				</div>
				<!-- Right Content -->
				<div class="col-xl-4 col-lg-4">
					<div class="post-details3  mb-50">
						<!-- Small Section Tittle -->
						<div class="small-section-tittle">
							<h4>Job Overview</h4>
						</div>
						<ul>
							<li>Posted date : <span>@Model.CreatedTime?.ToString("dd MMMM yyyy")</span></li>
							<li>Location : <span>@Model.Region</span></li>
							<li>Vacancy : <span>@Model.Id</span></li>
							<li>Job nature : <span>@Model.JobNature</span></li>
							@{
								var minSalaryYear = Model.MinimumSalary * 12;
								var maxSalaryYear = Model.MaximumSalary * 12;
							}
							<li>Salary :  <span>$@minSalaryYear -@maxSalaryYear yearly</span></li>
							<li>Application date : <span>@Model.ApplicationDate?.ToString("dd MMMM yyyy")</span></li>
						</ul>
						<div class="apply-btn2">
							<a href="#" class="btn">Apply Now</a>
						</div>
					</div>
					<div class="post-details4  mb-50">
						<!-- Small Section Tittle -->
						<div class="small-section-tittle">
							<h4>Company Information</h4>
						</div>
						<span>@Model.Company.CompanyName</span>
						<p>@Model.Company.CompanyInformation</p>
						<ul>
							<li>Name: <span>@Model.ContactPersonName </span></li>
							<li>Email: <span>@Model.Email</span></li>
							<li>Address: <span>@Model.Address</span></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>