
@model JobSearchFilterOptions


<div class="slider-area ">
    <!-- Mobile Menu -->
    <div class="slider-active">
        <div class="single-slider slider-height d-flex align-items-center" data-background="/assets/img/hero/h1_hero.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-9 col-md-10">
                        <div class="hero__caption">
                            <h1>Find the most exciting startup jobs</h1>
                        </div>
                    </div>
                </div>
                <!-- Search Box -->
                <div class="row">
                    <div class="col-xl-8" >
                        <!-- form -->
                        <form asp-area="AllUsers" asp-controller="FindJob" asp-action="Jobs" method="get" class="search-box" style="justify-content:start !important;">
                            <div class="input-form">
                                <input name="SearchedWord" type="text" placeholder="Job Tittle or keyword">
                            </div>
                            <div class="search-form">
                                <button type="submit" class="btn">Find job</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


