@model RegisterVM

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<h2>Register</h2>
			<form name="Register" asp-action="Register" asp-controller="Account" method="post">
				<div asp-validation-summary="All"></div>
				<div class="form-group">
					<label for="Email">Email</label>
					<input type="email" class="form-control" id="Email" asp-for="Email" >
					<span asp-validation-for="Email"></span>
				</div>
				<div class="form-group">
					<label for="Username">Username</label>
					<input type="text" class="form-control" id="Username" asp-for="UserName" required>
					<span asp-validation-for="UserName"></span>
				</div>
				<div class="form-group">
					<label asp-for="PasswordHash">Password</label>
					<input type="password" class="form-control" id="Password" asp-for="PasswordHash" required>
					<span asp-validation-for="PasswordHash"></span>
				</div>
				<div class="form-group">
					<label for="PasswordConfirmed">Confirm Password</label>
					<input type="password" class="form-control" id="PasswordConfirmed" asp-for="PasswordConfirmed" required>
					<span asp-validation-for="PasswordConfirmed"></span>
				</div>
				<div class="form-group">
					<label for="Firstname">First Name</label>
					<input type="text" class="form-control" id="Firstname" asp-for="Firstname" required>
					<span asp-validation-for="Firstname"></span>
				</div>
				<div class="form-group">
					<label for="Lastname">Last Name</label>
					<input type="text" class="form-control" id="Lastname" asp-for="Lastname" required>
					<span asp-validation-for="Lastname"></span>
				</div>
				<div class="form-group">
					<label for="PhoneNumber">Phone Number</label>
					<input type="tel" class="form-control" id="PhoneNumber" asp-for="PhoneNumber">
				</div>

				<button type="submit" class="btn btn-primary-danger mb-3">Register</button>
			</form>
		</div>
	</div>
</div>

